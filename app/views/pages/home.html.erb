<!-- app/views/pages/home.html.erb -->
<div class="container mx-auto px-4 py-2 mb-15">
  <div class="flex justify-center mb-22">
    <img src="https://www.amoedodistribuidora.com/wp-content/uploads/2024/03/LOGOTIPO_0003_AMOEDO.png" alt="Amoedo Logo" class="h-16 md:h-24 w-auto">
  </div>

  <div class="flex flex-col md:flex-row justify-center items-center gap-6">
    <div class="w-full md:w-80 h-64 p-6 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700 flex flex-col justify-between">
      <div>
        <a href="#">
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Arquivo de Remessa</h5>
        </a>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">Envia arquivo de remessa para o Asaas</p>
      </div>
      <%= link_to new_santander_remessa_upload_path, class: "inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-[#2965f6] rounded-lg hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:hover:bg-blue-600 dark:focus:ring-blue-800" do %>
        Santander
        <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
      <% end %>
      <%= link_to new_bradesco_remessa_upload_path, class: "mt-2 inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-[#2965f6] rounded-lg hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:hover:bg-blue-600 dark:focus:ring-blue-800" do %>
        Bradesco
        <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
      <% end %>
    </div>

    <div class="w-full md:w-80 h-64 p-6 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700 flex flex-col justify-between">
      <div>
        <a href="#">
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Arquivo de retorno</h5>
        </a>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">Poder√° fazer download novamente do arquivo de retorno</p>
      </div>
      <a href="#" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-[#2965f6] rounded-lg hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:hover:bg-blue-600 dark:focus:ring-blue-800">
        Prosseguir
        <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
      </a>
    </div>
  </div>
  <div class="flex justify-center mt-8">
    <%= button_to "Sair", destroy_session_path, method: :delete, class: "px-4 py-2 text-sm font-medium text-center text-white bg-red-600 rounded-lg hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300" %>
  </div>
</div>
