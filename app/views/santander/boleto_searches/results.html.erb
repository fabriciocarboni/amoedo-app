<!-- app/views/santander/boleto_searches/results.html.erb -->
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-center mb-8">
    <img src="https://www.amoedodistribuidora.com/wp-content/uploads/2024/03/LOGOTIPO_0003_AMOEDO.png" alt="Amoedo Logo" class="h-16 md:h-24 w-auto">
  </div>

  <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white">
        Boletos Encontrados (<%= @boletos.count %>)
      </h2>
    </div>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Nome</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Vencimento</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Valor</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Nosso Número</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Ações</th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
          <% @boletos.each do |boleto| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                <%= boleto[:nome_pagador] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                <%= boleto[:vencimento] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                <%= boleto[:valor] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                <%= boleto[:nosso_numero] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "Gerar Boleto", 
                    "#", 
                    class: "text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300",
                    data: { 
                      cpf_cnpj: boleto[:cpf_cnpj].gsub(/[^\d]/, ""),
                      nosso_numero: boleto[:nosso_numero]
                    } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="flex justify-center mt-8 space-x-4">
    <!-- Fix: Change from santander_remessa_uploads_new_path to new_santander_remessa_upload_path -->
    <%= link_to "Nova Busca", new_santander_remessa_upload_path, class: "px-4 py-2 text-sm font-medium text-center text-white bg-[#2965f6] rounded-lg hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300" %>
    <%= link_to "Voltar", :back, class: "px-4 py-2 text-sm font-medium text-center text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300 focus:ring-4 focus:outline-none focus:ring-gray-300" %>
  </div>
</div>
